{
    "[javascript]": {
        "editor.defaultFormatter": "vscode.typescript-language-features"
    },
    "[typescript]": {
        "editor.defaultFormatter": "vscode.typescript-language-features"
    },
    "git.ignoreLimitWarning": true,
    "editor.formatOnSave": true,
    "javascript.format.semicolons": "insert",
    "typescript.format.semicolons": "insert",
    "editor.tabSize": 4,
    "search.exclude": {
        "**/.git": true,
        "**/node_modules": true,
        "**/build": true
    },
    "files.exclude": {
        "**/.git": true,
        "**/.DS_Store": true,
        "**/node_modules": true,
        "**/build": true
    }
}